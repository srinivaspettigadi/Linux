version: '3'

services:
  swagger:
    image: swaggerapi/swagger-ui
    ports:
      - "8081:8080"
    environment:
      - SWAGGER_JSON=/home/bdrkuser/swagger/swagger.json # Mount your Swagger JSON file
    networks:
      - appnet
    deploy:
      replicas: 1 # You usually need only one Swagger UI instance

